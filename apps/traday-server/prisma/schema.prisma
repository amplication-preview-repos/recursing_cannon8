datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model TradingSignal {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  isActive    Boolean?
  price       Float?
  title       String?
  updatedAt   DateTime @updatedAt
}

model Tool {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  price       Float?
  updatedAt   DateTime @updatedAt
  version     String?
}

model TelegramSubscription {
  createdAt        DateTime  @default(now())
  id               String    @id @default(cuid())
  isActive         Boolean?
  subscriptionDate DateTime?
  updatedAt        DateTime  @updatedAt
  user             User?     @relation(fields: [userId], references: [id])
  userId           String?
}

model User {
  createdAt             DateTime               @default(now())
  email                 String?                @unique
  firstName             String?
  id                    String                 @id @default(cuid())
  lastName              String?
  password              String
  roles                 Json
  telegramSubscriptions TelegramSubscription[]
  updatedAt             DateTime               @updatedAt
  username              String                 @unique
}
